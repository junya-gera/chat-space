.main--chat
  .chat--header
    .chat--header__left
      .chat--header__left--group
        = @group.name
      .chat--header__left--message
        member : 
      - @group.users.each do |user|
        .chat--header__left--message--member
          =user.name
    .chat--header__right
      = link_to edit_group_path(@group), class: "chat--header__right--box" do
        Edit
  .chat--contents
    = render @messages
    
  .form
    .form__input--field
      = form_for [@group, @message], html: {class: "formfor"} do |f|
        = f.text_field :content, class: 'form__input--field__text', placeholder: 'type a message'
        .form__input--field__image
          = f.label :image, class: 'form__input--field__image' do
            = icon('fas', 'image', class: 'image--icon')
            = f.file_field :image, class: 'image--icon--file'
        = f.submit 'Send', class: 'form--btn'


